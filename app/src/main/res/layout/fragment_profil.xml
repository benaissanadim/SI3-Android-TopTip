<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/idProfil"
    tools:context=".fragments.ProfilFragment">

    <TextView
        android:id="@+id/idProfilHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Mon compte"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/compte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/idProfilHeader"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/img"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/idProfilHeader"
        android:src="@drawable/ic_profil">
    </ImageView>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/idButtonDeconnexion"
            android:layout_height="wrap_content"
            android:backgroundTint="#e4e9ef"
            android:text="DÃ©connexion">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idButtonSupprimerCompte"
            android:backgroundTint="#e4e9ef"
            android:text="Supprimer Compte">

        </Button>

    </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_below="@id/compte"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailInfoCompte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Email :"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/emailInfoCompteET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="nadim.ben.aissaa@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/user"
        android:layout_below="@id/email"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/pseudoInfoCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="Pseudo :"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/pseudoInfoCompteET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="nadim"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/edit"
        android:layout_margin="10dp"
        android:layout_below="@id/user"
        android:orientation="horizontal">
    <Button
        android:id="@+id/idBtnModifProfil"
        android:layout_width="200dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_light"
        android:text="Modfier Informations"
        android:textAllCaps="false" />
        <Button
            android:id="@+id/idBtnModifMdp"
            android:layout_width="200dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_light"
            android:text="Modfier Mot de Passe"
            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/idButtonHistorique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_light"
        android:layout_margin="20dp"
        android:layout_below="@id/edit"
        android:text="Voir Historique"
        android:textAllCaps="false" />


</RelativeLayout>