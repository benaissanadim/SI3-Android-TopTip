<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapsFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MapsFragments">
    </fragment>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/idSearchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundedbutton"
            android:elevation="5dp"
            app:iconifiedByDefault="false"
            app:queryHint="Ville">

        </androidx.appcompat.widget.SearchView>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/lieux"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="11dp"
                    android:background="@drawable/btn_state"
                    android:textColor="@drawable/color_state"
                    android:textStyle="bold"
                    android:text="Tous">
                </Button>

                <Button
                    android:id="@+id/resturants"
                    android:layout_margin="2dp"
                    android:layout_width="0dp"
                    android:textSize="11dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_state"
                    android:textColor="@drawable/color_state"
                    android:textStyle="bold"
                    android:text="Restaurants">
                </Button>
                <Button
                    android:id="@+id/supermarchés"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_state"
                    android:textColor="@drawable/color_state"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:text="Supermarchés">
                </Button>
                <Button
                    android:id="@+id/boulangeries"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_state"
                    android:textColor="@drawable/color_state"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:text="Boulangeries">
                </Button>
                <Button
                    android:id="@+id/boucherie"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/btn_state"
                    android:textColor="@drawable/color_state"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="Boulcheries">
                </Button>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/info"
                android:layout_width="192dp"
                android:layout_height="128dp"
                android:visibility="invisible"
                android:src="@drawable/mapinfo"></ImageView>

            <ImageButton
                android:id="@+id/btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="140dp"
                android:bottomLeftRadius="100dp"
                android:src="@drawable/ic_info"></ImageButton>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>