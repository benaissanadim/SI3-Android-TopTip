<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#e4e9ef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/idAddHeader"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#0e81d1"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:text="DÃ©tails du lieu"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:bottomLeftRadius="100dp"
        android:src="@drawable/ic_return"></ImageButton>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/green"
            android:text="@string/place_name"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/name"
            android:text="@string/place_details" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/BAjouterAuxFavs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="AJOUTER AUX FAVORIS" />

        <Button
            android:id="@+id/BAjouterBP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="AJOUTER Un Bon Plan ici" />

    </LinearLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:layout_below="@+id/title"
        android:src="@drawable/img" />

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/bonplan_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"></ListView>
    </RelativeLayout>



</RelativeLayout>